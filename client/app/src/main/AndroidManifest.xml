<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.debernardi.archemii">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="client.activities.GameActivity"></activity>
        <activity android:name="client.activities.GameSelectActivity" />
        <activity android:name="client.activities.LobbyActivity" />
        <activity android:name="client.activities.JoinPartyActivity" />
        <activity android:name="client.activities.SettingsActivity" />
        <activity android:name="client.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>