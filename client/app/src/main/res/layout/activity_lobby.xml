<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gridLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="client.activities.LobbyActivity"
    android:background="@color/background"
    android:rowCount="5"
    android:columnCount="2"
    >

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:id="@+id/ability1"
        android:onClick="onChangeAbility"
        android:background="@color/button"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_gravity="fill"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:text="@string/ability_button"
            android:fontFamily="@font/lunchds_font"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/ability_name1"
            android:padding="5dp"
            />
        <TextView
            android:layout_gravity="center"
            android:fontFamily="@font/lunchds_font"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:textSize="12sp"
            android:text="first"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ability_description1"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:id="@+id/ability2"
        android:onClick="onChangeAbility"
        android:background="@color/colorPrimary"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="@font/lunchds_font"
            android:layout_width="match_parent"
            android:text="@string/ability_button"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/ability_name2"
            android:padding="5dp"
            />
        <TextView
            android:text="second"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/lunchds_font"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ability_description2"
            android:padding="5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:id="@+id/ability3"
        android:onClick="onChangeAbility"
        android:background="@color/colorAccent"
        android:layout_column="0"
        android:layout_row="3"
        android:layout_rowWeight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        >
        <TextView
            android:layout_height="0dp"
            android:layout_weight="2"
            android:fontFamily="@font/lunchds_font"
            android:layout_width="match_parent"
            android:text="@string/ability_button"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAlignment="center"
            android:id="@+id/ability_name3"
            android:padding="5dp"
            />
        <TextView
            android:text="third"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/lunchds_font"
            android:textColor="@android:color/background_light"
            android:textAlignment="center"
            android:textSize="12sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/ability_description3"
            android:padding="5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/abilityDescription"
        android:fontFamily="@font/lunchds_font"
        android:textAlignment="center"
        android:gravity="center"
        android:text="@string/ability_tutorial"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_gravity="fill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/game_pin"
        android:text="@string/game_pin"
        android:textAlignment="center"
        android:fontFamily="@font/lunchds_font"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="5dp"
        android:layout_marginRight="30dp"
        />

    <TextView
        android:id="@+id/playersTxtView"
        android:fontFamily="@font/lunchds_font"
        android:padding="10dp"
        android:lineSpacingExtra="10dp"
        android:background="@android:color/darker_gray"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_rowSpan="3"
        android:layout_rowWeight="3"
        android:layout_gravity="fill"
        android:text="test\ntest\ntest"
        android:layout_marginRight="30dp"
        />

    <Button
        android:id="@+id/btnStartGame"
        android:backgroundTint="@color/button"
        android:fontFamily="@font/lunchds_font"
        android:onClick="onButtonPressed"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_gravity="fill_horizontal"
        android:layout_marginRight="30dp"
        />

</GridLayout>